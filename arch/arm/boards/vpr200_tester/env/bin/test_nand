#!/bin/sh

PATH=/env/bin
export PATH

echo "Testing NAND"

i2c_write -a 0x08 -r 0x35 0x8a 0xd8 0xad
i2c_write -a 0x08 -r 0x36 0x00 0x08 0xad

# 
# This is a destructive test !!
#
#
nandtest /dev/nand0.rootfs -t

if [ $? != "0" ]; then
	# 
	i2c_write -a 0x08 -r 0x35 0x9f 0x00 0x00
	i2c_write -a 0x08 -r 0x36 0x00 0x08 0x22 
	echo "Error testing NAND"

	sleep 5
fi


# leds off
i2c_write -a 0x08 -r 0x35 0x00 0x00 0x00 
i2c_write -a 0x08 -r 0x36 0x00 0x00 0x00 


