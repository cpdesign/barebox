#!/bin/sh

PATH=/env/bin
export PATH

#
buzzer -f 880 -d 30

. /env/config
if [ -e /dev/nor0 ]; then
	addpart /dev/nor0 $nor_parts
fi

if [ -e /dev/nand0 ]; then
	addpart /dev/nand0 $nand_parts

	# Uh, oh, hush first expands wildcards and then starts executing
	# commands. What a bug!
	source /env/bin/hush_hack 
fi

if [ -e /dev/disk0 ]; then
	addpart /dev/disk0 $mmc_boot_parts
fi

if [ -z $eth0.ethaddr ]; then
	echo "WARN: no MAC address set for eth0."
fi

#
if [ -f /env/logo.bmp.lzo ]; then
	unlzo /env/logo.bmp.lzo /logo.bmp
	bmp /logo.bmp
elif [ -f /env/logo.bmp ]; then
	bmp /env/logo.bmp
	fb0.enable=1
fi

#
vprbacklight -s 40

# unless button combo pressed, jump straight into booting
button -m 0x03

if [ x$? = x0 ]; then
	echo -n "Hit any key to stop autoboot: "
	timeout -a $autoboot_timeout

	if [ x$? != x0 ]; then
		echo
		echo "type update -h for info on updating flash"
		echo
		exit
	fi
fi

boot
