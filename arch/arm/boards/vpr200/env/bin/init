#!/bin/sh

PATH=/env/bin
export PATH

#
buzzer -f 880 -d 30

# force reset audio dac in case audio playing during soft reset
i2c_write -b 1 -a 0x47 -r 0x55 0x80

. /env/config
if [ -e /dev/nor0 ]; then
	addpart /dev/nor0 $nor_parts
fi

if [ -e /dev/nand0 ]; then
	addpart /dev/nand0 $nand_parts
	nand -a /dev/nand0.*
fi

if [ -e /dev/disk0 ]; then
	addpart /dev/disk0 $mmc_boot_parts
fi

if [ -z $eth0.ethaddr ]; then
	echo "WARN: no MAC address set for eth0."
fi


# unless button combo pressed, jump straight into booting
button -m 0x03

if [ "x$?" = "x0" ]; then
	echo -n "Hit any key to stop autoboot: "
	timeout -a $autoboot_timeout

	if [ "x$?" !=  "x0" ]; then
		echo
		echo "type update -h for info on updating flash"
		echo
		exit
	fi
fi

boot
