config ARCH_TEXT_BASE
	hex
	default 0x83f00000 if MACH_EUKREA_CPUIMX25
	default 0xa0000000 if MACH_EUKREA_CPUIMX27
	default 0x87f00000 if MACH_EUKREA_CPUIMX35
